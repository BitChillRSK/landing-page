---
import { CTA_URL } from "../config/constants.js";

const {
  title = "BitChill — DCA en Bitcoin (Rootstock)",
  description = "Ahorra en (r)Bitcoin de forma automática y sin estrés. Deposita DOC/USDRIF, genera intereses en Sovryn/Tropykus mientras esperas y compra rBTC periódicamente con BitChill.",
} = Astro.props;
---

<!doctype html>
<html lang="es" data-theme="bitchill">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/og.jpg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        font-family:
          Inter,
          ui-sans-serif,
          system-ui,
          -apple-system;
      }
    </style>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body class="min-h-screen bg-bg text-text">
    <header
      class="w-full sticky top-0 z-50 bg-black/70 backdrop-blur border-b border-[#1b1b1b]"
    >
      <nav
        class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 flex items-center justify-between h-16"
      >
        <a href="/" class="flex items-center gap-2">
          <img src="/white_logo.svg" alt="BitChill" class="h-7 w-auto" />
        </a>
        <div class="flex items-center gap-3">
          <a class="btn btn-sm btn-ghost text-white" href="#como-funciona"
            >Cómo funciona</a
          >
          <a
            class="btn btn-sm btn-primary rounded-[20px] text-white"
            href={CTA_URL}
            target="_blank"
            rel="noreferrer">Abrir App</a
          >
        </div>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="border-t border-[#1b1b1b] mt-16">
      <div
        class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10 text-sm text-gray-300"
      >
        <div
          class="flex flex-col sm:flex-row gap-4 sm:items-center sm:justify-between"
        >
          <p>© {new Date().getFullYear()} BitChill. Tu wallet, tus fondos.</p>
          <div class="flex gap-5">
            <a href="#faq" class="hover:text-white">FAQ</a>
            <a href="#" class="hover:text-white">Aviso legal</a>
            <a href="#" class="hover:text-white">Privacidad</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
